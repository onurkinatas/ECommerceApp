<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>E-Commerce App</title>

    <link href="~/Templates/ECommerceTemplate/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Templates/ECommerceTemplate/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Templates/ECommerceTemplate/css/animate.css" rel="stylesheet">
    <link href="~/Templates/ECommerceTemplate/css/style.css" rel="stylesheet">



</head>

<body>

    <div id="wrapper">
        @await Html.PartialAsync("/Views/Shared/Partials/_Sidebar.cshtml")
        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                @await Component.InvokeAsync("Navbar")
            </div>
            @RenderBody()
            @await Component.InvokeAsync("Footer")
        </div>
    </div>

    <script src="~/Templates/ECommerceTemplate/js/jquery-3.1.1.min.js"></script>
    <script src="~/Templates/ECommerceTemplate/js/bootstrap.js"></script>
    <script src="~/Templates/ECommerceTemplate/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Templates/ECommerceTemplate/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
